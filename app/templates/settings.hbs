<div class="row">
    <div class="col-xs-3">
        <h1>Settings</h1>
    </div>
    <div class="col-xs-2 col-xs-offset-7 save-settings-container-header">
        {{spinner-button class='save-settings pull-right' type="button" actionName="saveSettings" size="sm"
        color="primary" iconClass="fa fa-save fa-lg" buttonText="Save Settings" isLoading=saveInProgress
        target=controller}}
    </div>
</div>

{{render 'settings.info' model=model.info controller='settings.info'}}

{{render 'pools.pools' model=model.pools controller='pools.pools'}}

{{render 'settings.analytics' model=model.analytics controller='settings.analytics'}}

{{render 'alerts.alerts' model=model.alerts controller='alerts.alerts'}}

{{render 'settings.notification' model=model.notification controller='settings.notification'}}

{{render 'settings.user' model=model.user controller='settings.user'}}

<div class="row save-settings-container-footer">
    <div class="col-lg-12">
        {{spinner-button class='save-settings pull-right' type="button" actionName="saveSettings" size="sm"
        color="primary" iconClass="fa fa-save fa-lg" buttonText="Save Settings" isLoading=saveInProgress
        target=controller}}
    </div>
</div>

<div class="settings-restart-reboot-container">
    <h3>Restart/Reboot</h3>
    {{render 'elements.restart-reboot' controller='elements.restart-reboot'}}
</div>
